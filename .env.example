# G-Manga Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# LLM API Keys
# ============================================================================

# OpenAI API (for DALL-E 3 image generation)
# Get from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=

# OpenRouter API (for FLUX, Gemini image generation, and LLMs)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Z.AI API (for GLM-4.7 LLM models)
# Get from: https://z.ai/console/api-keys
ZAI_API_KEY=

# Stability AI API (for SDXL image generation)
# Get from: https://platform.stability.ai/account/api-keys
STABILITY_API_KEY=

# ============================================================================
# Optional: Application Settings
# ============================================================================

# Debug mode (true/false)
DEBUG_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Default image provider (openrouter, dalle3, sdxl)
DEFAULT_IMAGE_PROVIDER=openrouter

# Default LLM provider (openai, openrouter, zai)
DEFAULT_LLM_PROVIDER=zai
